{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@shared/types": ["../../../../apps/desktop/src/shared/types/index.ts"],
      "@shared/utils/*": ["../../../../apps/desktop/src/shared/utils/*"],
      "@plugins/data-plugin/*": ["../../../data-plugin/ui/data-nexus/src/*"]
    }
  },
  "include": ["src/**/*", "../../../../apps/desktop/src/shared/types/**/*", "../../../../apps/desktop/src/shared/utils/**/*"],
  "exclude": ["node_modules", "dist"]
}
