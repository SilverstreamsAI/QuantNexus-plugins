{
  "$schema": "https://quantnexus.io/schemas/plugin-manifest.json",
  "id": "com.quantnexus.strategy-builder-nexus",
  "name": "strategy-builder-nexus",
  "displayName": "Nona Strategy Builder",
  "version": "1.0.0",
  "description": "Strategy creation, market regime classification, and AI-powered code generation",
  "main": "./dist/index.js",
  "type": "nexus",
  "category": "strategy",
  "protocols": ["strategy-nexus"],
  "serviceEntitlements": [
    {
      "id": "regime_mode",
      "name": "Regime Detector",
      "description": "Market environment and regime classification",
      "tier": "free",
      "defaultEnabled": true,
      "category": "REGIME MODE"
    },
    {
      "id": "indicator_entry_generator",
      "name": "INDICATOR ENTRY GENERATOR",
      "description": "Generate entry signals from technical indicators",
      "tier": "free",
      "defaultEnabled": true,
      "category": "REGIME MODE"
    },
    {
      "id": "kronos_predictor",
      "name": "KRONOS PREDICTOR",
      "description": "Time-series prediction engine",
      "tier": "pro",
      "defaultEnabled": true,
      "category": "KRONOS MODE"
    },
    {
      "id": "indicator_entry",
      "name": "INDICATOR ENTRY",
      "description": "Indicator-based entry signals",
      "tier": "free",
      "defaultEnabled": true,
      "category": "KRONOS MODE"
    },
    {
      "id": "ai_entry",
      "name": "AI ENTRY",
      "description": "AI-powered entry signal generation",
      "tier": "pro",
      "defaultEnabled": true,
      "category": "KRONOS MODE"
    },
    {
      "id": "market_observer",
      "name": "MARKET OBSERVER",
      "description": "Real-time market observation",
      "tier": "free",
      "defaultEnabled": true,
      "category": "TRADER MODE"
    },
    {
      "id": "ai_entry_generator",
      "name": "AI ENTRY GENERATOR",
      "description": "AI-powered entry generation for trading",
      "tier": "pro",
      "defaultEnabled": true,
      "category": "TRADER MODE"
    },
    {
      "id": "indicator_exit_generator",
      "name": "INDICATOR EXIT GENERATOR",
      "description": "Risk management and exit strategy generation",
      "tier": "free",
      "defaultEnabled": true,
      "category": "RISK MANAGER"
    },
    {
      "id": "ai_libero",
      "name": "AI LIBERO",
      "description": "Centralized AI control and autonomous agents",
      "tier": "enterprise",
      "defaultEnabled": true,
      "category": "AI COMMAND CENTER"
    }
  ],
  "contributes": {
    "viewsContainers": {
      "sidebar": [{
        "id": "strategyExplorer",
        "title": "STRATEGY",
        "icon": "resources/strategy-icon.svg"
      }]
    },
    "views": {
      "strategyExplorer": [{
        "id": "strategy.tree",
        "name": "Strategy Tree"
      }],
      "workbench": [{
        "id": "strategy.hub",
        "name": "Strategy Hub"
      }, {
        "id": "strategy.providerPortal",
        "name": "Provider Portal"
      }, {
        "id": "strategy.groupList",
        "name": "Strategy Groups"
      }]
    },
    "editors": [{
      "viewType": "strategy.regimeEditor",
      "displayName": "Regime Editor",
      "selector": [{ "resourceScheme": "strategy" }]
    }],
    "commands": [
      { "id": "strategy.openHub", "title": "Open Strategy Hub" },
      { "id": "strategy.generate", "title": "Generate Strategy Code" },
      { "id": "strategy.validate", "title": "Validate Strategy" }
    ]
  },
  "permissions": ["network:internal", "database"],
  "isolation": "trusted",
  "activationEvents": ["onView:strategy.tree", "onCommand:strategy.openHub"]
}
