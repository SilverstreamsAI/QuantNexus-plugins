{
  "$schema": "https://quantnexus.io/schemas/plugin-manifest.json",
  "id": "com.quantnexus.data",
  "name": "Data",
  "version": "1.0.0",
  "description": "Market data provider with multi-source support, caching, and local storage",
  "author": "QuantNexus Team",
  "homepage": "https://quantnexus.io/plugins/data",
  "license": "MIT",

  "main": "./dist/index.js",
  "type": "data-source",
  "category": "data",

  "contributes": {
    "commands": [
      {
        "id": "data.refresh",
        "title": "Refresh Data",
        "category": "Data",
        "keybinding": "Ctrl+R"
      },
      {
        "id": "data.clearCache",
        "title": "Clear Cache",
        "category": "Data"
      },
      {
        "id": "data.importCSV",
        "title": "Import CSV",
        "category": "Data"
      },
      {
        "id": "data.exportCSV",
        "title": "Export CSV",
        "category": "Data"
      }
    ],
    "settings": [
      {
        "id": "data.defaultProvider",
        "title": "Default Provider",
        "type": "string",
        "default": "yahoo",
        "enum": ["yahoo", "binance", "csv"],
        "description": "Default data provider"
      },
      {
        "id": "data.cacheEnabled",
        "title": "Enable Cache",
        "type": "boolean",
        "default": true,
        "description": "Enable in-memory caching"
      },
      {
        "id": "data.cacheTTL",
        "title": "Cache TTL (seconds)",
        "type": "number",
        "default": 300,
        "minimum": 60,
        "maximum": 3600,
        "description": "Cache time-to-live in seconds"
      },
      {
        "id": "data.storageEnabled",
        "title": "Enable Local Storage",
        "type": "boolean",
        "default": true,
        "description": "Enable SQLite local storage"
      },
      {
        "id": "data.retentionDays",
        "title": "Data Retention (days)",
        "type": "number",
        "default": 365,
        "minimum": 30,
        "description": "How long to keep historical data"
      }
    ]
  },

  "permissions": [
    "network",
    "database",
    "filesystem"
  ],

  "isolation": "trusted",

  "activationEvents": [
    "onStartup"
  ],

  "configSchema": {
    "type": "object",
    "properties": {
      "providers": {
        "type": "object",
        "title": "Provider Configurations",
        "properties": {
          "yahoo": {
            "type": "object",
            "properties": {
              "enabled": { "type": "boolean", "default": true }
            }
          },
          "binance": {
            "type": "object",
            "properties": {
              "enabled": { "type": "boolean", "default": true },
              "apiKey": { "type": "string" },
              "apiSecret": { "type": "string" }
            }
          }
        }
      },
      "storage": {
        "type": "object",
        "title": "Storage Configuration",
        "properties": {
          "dbPath": { "type": "string", "default": "data/market.db" },
          "maxSizeMB": { "type": "number", "default": 1024 }
        }
      },
      "cache": {
        "type": "object",
        "title": "Cache Configuration",
        "properties": {
          "maxMemoryMB": { "type": "number", "default": 256 },
          "defaultTTL": { "type": "number", "default": 300000 }
        }
      }
    }
  }
}
